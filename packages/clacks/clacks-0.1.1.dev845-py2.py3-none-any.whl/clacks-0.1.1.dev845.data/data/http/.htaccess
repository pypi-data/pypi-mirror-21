AddHandler fcgid-script .fcgi

RewriteEngine on
RewriteBase /

RewriteCond %{HTTP_HOST} ^www.debhosting.net
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/%{REQUEST_URI} [R,L]

# MultiViews with SUBREQ below are breaking
# passing url to application in some screnarios
Options -MultiViews

RewriteCond %{IS_SUBREQ} true
RewriteRule ^(.*)$ - [L]

RewriteRule ^(_js/(?!\.minified/).*) _js/.minified/$1

RewriteCond %{REQUEST_FILENAME} -F
RewriteRule ^(_js/.minified/.*)$ - [L]

RewriteRule ^_js/.minified/(.*)$ $1

RewriteCond %{REQUEST_FILENAME} -F
RewriteRule ^(.*)$ - [L]

RewriteRule ^(.*)$ /cgi-bin/clacks.fcgi/$1 [L]
