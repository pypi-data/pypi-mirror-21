# MANIFEST.in
# Template for Distutils manifest for this distribution.
# Documentation: <URL:https://docs.python.org/3/distutils/sourcedist.html#specifying-the-files-to-distribute>.

include VERSION
include CHANGELOG
include LICENSE.*
include README

recursive-include tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

recursive-include doc *.txt conf.py Makefile make.bat
recursive-include doc *.svg *.png

recursive-include maildrake/web/static *.css *.png
recursive-include maildrake/web/templates *.html
recursive-include maildrake/store *.sql


