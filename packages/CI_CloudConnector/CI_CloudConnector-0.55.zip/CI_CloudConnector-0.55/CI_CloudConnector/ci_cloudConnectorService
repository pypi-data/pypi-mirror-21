    ;;
  stop)
    log_begin_msg "Stopping CI_CloudConnector"

    # do something to kill the service or cleanup or nothing

    log_end_msg $?
    exit 0
    ;;
  *)
    echo "Usage: /etc/init.d/ido {start|stop}"
    exit 1
    ;;
esac