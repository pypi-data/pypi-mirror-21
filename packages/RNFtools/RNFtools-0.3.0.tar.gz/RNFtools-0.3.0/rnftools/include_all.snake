from snakemake.utils import min_version

min_version("3.2")

include: "mishmash/mishmash.snake"
include: "lavender/lavender.snake"

rule index_fasta:
	output:
		"{filename}.{suffix}.fai"
	input:
		"{filename}.{suffix}"
	message:
		"Creating index for a FASTA file ({input})."
	shell:
		"""
			(
		 		samtools faidx "{input}"
			) > /dev/null
		"""


