#!/usr/bin/env python3
"""
Validate a GFA file
"""

import sys
import os
from gfapy import Gfa
import argparse

op = argparse.ArgumentParser(description=__doc__)
op.add_argument("filename")
op.add_argument('--version', action='version', version='%(prog)s 1.0')
opts = op.parse_args()

gfa = Gfa.from_file(opts.filename)
gfa.validate()
